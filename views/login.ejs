<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- TailWind -->
    <script src="https://cdn.tailwindcss.com"></script>
	<!-- Font Awesome -->
	<script src="https://kit.fontawesome.com/db349aca81.js" crossorigin="anonymous"></script>
    <title>Login to Stitched to Death</title>
</head>
<body>
	<% if (locals.messages.errors) { %>
		<% messages.errors.forEach( el => { %>
			<div class="alert alert-danger"><%= el.msg %></div>
		<% }) %>    
	<% } %>
	<% if (locals.messages.info) { %>
		<% messages.info.forEach( el => { %>
			<div class="alert alert-info"><%= el.msg %></div>
		<% }) %>    
	<% } %>
	
	<div class="bg-rose-400 h-screen overflow-hidden flex items-center justify-center">
		<div class="bg-white lg:w-5/12 md:6/12 w-10/12 shadow-3xl">
		<div class="bg-rose-300 absolute left-1/2 transform -translate-x-1/2 -translate-y-1/2 rounded-full p-4 md:p-8">
			<svg width="32" height="32" viewBox="0 0 24 24" fill="#333">
			<path d="M0 3v18h24v-18h-24zm6.623 7.929l-4.623 5.712v-9.458l4.623 3.746zm-4.141-5.929h19.035l-9.517 7.713-9.518-7.713zm5.694 7.188l3.824 3.099 3.83-3.104 5.612 6.817h-18.779l5.513-6.812zm9.208-1.264l4.616-3.741v9.348l-4.616-5.607z"/>
			</svg>
		</div>
		<form class="p-12 md:p-24" action="/login" method="POST">
			<h1 class="text-center font-bold text-2xl mb-4 lg:mb-10 lg:text-4xl">Stitched To Death</h1>
			<h2 class="text-center font-bold text-2xl mb-4 lg:mb-10 lg:text-3xl">Login</h2>

			<div class="flex items-center text-lg mb-6 md:mb-8">
			<i class="bg-gray-200 absolute ml-3 fa-solid fa-envelope"></i>
			<input type="text" id="email" name="email" class="form-control bg-gray-200 pl-12 py-2 md:py-4 focus:outline-none w-full" placeholder="Email" />
			</div>

			<div class="flex items-center text-lg mb-6 md:mb-8">
			<i class="bg-gray-200 absolute ml-3 fa-solid fa-lock"></i>
			<input type="password" id="password" name="password"class="form-control bg-gray-200 pl-12 py-2 md:py-4 focus:outline-none w-full" placeholder="Password" />
			</div>

			<button type="submit" class="bg-gradient-to-b from-gray-700 to-gray-900 font-medium p-2 md:p-4 text-white uppercase w-full">Login</button>
		</form>
		<div class="text-center">Don't have an account? <a href="/signup" class="underline cursor-pointer">Register Here</a>
			<!-- <form action="/login" method="POST" class="w-full">
				<input type="text" id="email" name="email" class="form-control hidden" value="test@test.com">
				<input type="password" id="password" name="password" class="form-control hidden " value="testtest">
				<button type="submit" class="text-center w-full underline">Click here to login to a test account.</button>
			</form> -->
		<div class="text-center mb-4"><a href="/" class="underline cursor-pointer">Back</a></div> 

		</div>
		</div>
</body>
</html>